<idea-plugin>
    <id>net.l2jliga.fastify_decorators_support</id>
    <name>Fastify decorators</name>
    <vendor email="l2jliga@gmail.com" url="https://github.com/l2jliga">Andrey Chalkin</vendor>

    <description><![CDATA[
    Plugin to provide support for fastify-decorators library.
    ]]></description>

    <depends>JavaScript</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensionPoints>
        <extensionPoint name="contextProvider"
                        interface="net.l2jliga.fastify_decorators_support.FastifyDecoratorsContextProvider"
                        dynamic="true" />
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <implicitUsageProvider implementation="net.l2jliga.fastify_decorators_support.providers.ControllerUsageProvider" />
        <implicitUsageProvider implementation="net.l2jliga.fastify_decorators_support.providers.ImplicitConstructorUsageProvider" />
        <localInspection implementationClass="net.l2jliga.fastify_decorators_support.inspections.ControllerClassDefaultExportInspection"
                         displayName="Controller export"
                         groupName="Fastify decorators" enabledByDefault="true" level="ERROR" language="TypeScript" />
        <localInspection implementationClass="net.l2jliga.fastify_decorators_support.inspections.ControllerArgumentsInspection"
                         displayName="Controller constructor arguments for DI"
                         groupName="Fastify decorators" enabledByDefault="true" level="ERROR" language="TypeScript" />
        <localInspection implementationClass="net.l2jliga.fastify_decorators_support.inspections.MethodDecoratorsInsideNonControllerClassInspection"
                         displayName="Methods/Hooks decorators available in @Controller classes only"
                         hasStaticDescription="true"
                         groupName="Fastify decorators" enabledByDefault="true" level="ERROR" language="TypeScript" />
    </extensions>

    <extensions defaultExtensionNs="net.l2jliga.fastify_decorators_support">
        <contextProvider implementation="net.l2jliga.fastify_decorators_support.providers.FastifyDecoratorsNodeModulesContextProviders" />
        <contextProvider implementation="net.l2jliga.fastify_decorators_support.providers.FastifyDecoratorsPackageJsonContextProviders" />
    </extensions>
</idea-plugin>