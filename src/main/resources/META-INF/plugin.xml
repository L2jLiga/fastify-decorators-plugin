<idea-plugin>
    <id>net.l2jliga.fastify_decorators_support</id>
    <name>Fastify decorators</name>
    <vendor email="l2jliga@gmail.com" url="https://github.com/l2jliga">Andrey Chalkin</vendor>

    <description><![CDATA[
    Plugin to provide support for fastify-decorators library.
    ]]></description>

    <depends>JavaScript</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <implicitUsageProvider implementation="net.l2jliga.fastify_decorators_support.providers.ControllerUsageProvider" />
        <localInspection implementationClass="net.l2jliga.fastify_decorators_support.inspections.ControllerDefaultExport"
                         displayName="Controller export"
                         groupName="Fastify decorators" enabledByDefault="true" level="ERROR" language="TypeScript" />
    </extensions>
</idea-plugin>